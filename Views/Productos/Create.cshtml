@model MarketLocalShirts3.Models.Producto

<style>
    body {
        background-color: #000;
        font-family: Arial, Helvetica, sans-serif;
    }

    .form-box {
        width: 380px;
        border: 1px solid #555;
        padding: 20px;
        color: #fff;
    }

    .form-title {
        background-color: #2196f3;
        color: #000;
        text-align: center;
        padding: 6px;
        font-weight: bold;
        margin-bottom: 15px;
    }

    .form-row {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
        font-size: 14px;
    }

        .form-row label {
            width: 150px;
        }

        .form-row input,
        .form-row select {
            width: 100%;
            height: 22px;
            font-size: 13px;
        }

    .form-buttons {
        text-align: center;
        margin-top: 15px;
    }

    .btn-simple {
        background-color: #2196f3;
        border: none;
        color: #000;
        padding: 4px 14px;
        font-size: 13px;
        margin: 0 5px;
        cursor: pointer;
        text-decoration: none;
    }

        .btn-simple:hover {
            opacity: 0.9;
        }
</style>

<div style="display:flex; justify-content:center; align-items:center; height:80vh;">

    <div class="form-box">

        <div class="form-title">Agregar producto</div>

        <form asp-action="Create" method="post" enctype="multipart/form-data">

            <div class="form-row">
                <label>Nombre de la playera:</label>
                <input asp-for="NombreProducto" />
            </div>

            <div class="form-row">
                <label>Precio:</label>
                <input asp-for="Precio" />
            </div>

            <div class="form-row">
                <label>Stock:</label>
                <input asp-for="Stock" />
            </div>

            <div class="form-row">
                <label>Imagen:</label>
                <input type="file" name="archivoImagen" />
            </div>

            <div class="form-row">
                <label>Categoría / Marca:</label>
                <select asp-for="IdMarca" asp-items="ViewBag.IdMarca"></select>
            </div>

            <div class="form-buttons">
                <button type="submit" class="btn-simple">Guardar</button>
                <a asp-action="Index" class="btn-simple">Volver</a>
            </div>

        </form>
    </div>
</div>
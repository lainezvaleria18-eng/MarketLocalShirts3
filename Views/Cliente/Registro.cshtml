@{
    ViewData["Title"] = "Registro";
}

<div class="d-flex justify-content-center mt-5">
    <div class="card bg-dark text-white p-4" style="width:400px;">
        <h4 class="text-center mb-4">Registrarse</h4>

        <form method="post">
            <input name="Nombre" class="form-control mb-3" placeholder="Nombre" />
            <input name="Correo" class="form-control mb-3" placeholder="Correo" />
            <input name="Password" type="password" class="form-control mb-3" placeholder="Contraseña" />

            <button type="submit" class="btn btn-primary w-100">
                Registrar
            </button>
        </form>
    </div>
</div>
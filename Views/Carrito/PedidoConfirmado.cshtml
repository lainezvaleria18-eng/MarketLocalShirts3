@model List<MarketLocalShirts3.Models.CarritoItem>

<h2 class="text-white">Pedido confirmado</h2>
<p class="text-white">Gracias por tu compra.</p>

<table class="table table-dark">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Marca</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Marca</td>
                <td>$@item.Precio</td>
                <td>@item.Cantidad</td>
                <td>$@(item.Precio* item.Cantidad)</td>
            </tr>
        }
    </tbody>
</table>

<h4 class="text-white">
    Total: $@ViewBag.Total
</h4>

<h5 class="text-white">
    Método de pago: @ViewBag.MetodoPago
        Finalizar pedido

<a asp-controller="Cliente"
   asp-action="Catalogo"
   class="btn btn-primary mt-3">
    Volver al catálogo
</a>
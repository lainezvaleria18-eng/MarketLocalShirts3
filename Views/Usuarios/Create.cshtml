@model MarketLocalShirts3.Models.Usuario

<div class="d-flex justify-content-center">
    <div class="card bg-black text-white p-4" style="width:400px;">
        <h4 class="bg-primary text-center p-2">Formulario de usuario</h4>

        <form asp-action="Create">
            <label>Nombre:</label>
            <input asp-for="Nombre" class="form-control mb-2" />

            <label>Correo:</label>
            <input asp-for="Correo" class="form-control mb-2" />

            <label>Contraseña:</label>
            <input asp-for="Contrasena" type="password" class="form-control mb-2" />

            <label>Rol:</label>
            <select asp-for="IdRol" asp-items="ViewBag.IdRol" class="form-control mb-3"></select>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
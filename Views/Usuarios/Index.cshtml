@model IEnumerable<MarketLocalShirts3.Models.Usuario>

<h2 class="text-white">Panel de administración usuarios</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Agregar usuario</a>

<table class="table table-dark table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Nombre</td>
                <td>@u.Correo</td>
                <td>@u.IdRolNavigation.NombreRol</td>
                <td>
                    <a asp-action="Edit"
                       asp-route-id="@u.IdUsuario"
                       class="btn btn-warning btn-sm">
                        Editar
                    </a>

                    <form asp-action="Delete"
                          asp-route-id="@u.IdUsuario"
                          method="post"
                          style="display:inline">
                        <button class="btn btn-danger btn-sm"
                                onclick="return confirm('¿Eliminar usuario?')">
                            Eliminar
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>